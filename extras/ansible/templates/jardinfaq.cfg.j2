[DEFAULT]
env = {{ env }}
server_url = {{ server_url }}

static_url = /static/
static_root = /static/
media_url = /media/
media_root = /media/
backup_dir = {{ backup_dir }}
secret_key = {{Â secret_key }}

default_db = mysql://{{ db_user }}:{{ db_password }}@database/{{ db_name }}

